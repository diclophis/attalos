#!/bin/sh

set -e

if [ ! -z $BROWSERIFY ]; then
  ./node_modules/.bin/browserify --standalone $1 $2 > $3
else
  #./node_modules/.bin/webpack --display-error-details --module-bind json --output-library $1 --output-library-target umd $2 $3
  node ./node_modules/webpack/bin/webpack.js --display-error-details --module-bind json --output-library $1 --output-library-target umd $2 $3
fi
